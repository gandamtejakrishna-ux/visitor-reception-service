# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# Check-in / Check-out (forwarded to processing service)
POST    /api/visitors/checkin        controllers.ReceptionController.checkin
POST    /api/visitors/checkout/:id   controllers.ReceptionController.checkout(id: Long)
GET     /api/reception/visitors/:id     controllers.ReceptionController.getVisitor(id: Long)
GET     /api/reception/visits/active    controllers.ReceptionController.activeVisits


# Authentication
POST    /auth/login           controllers.AuthController.login

# Health
GET     /health                      controllers.HealthController.ping
